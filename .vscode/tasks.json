{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build for Debug",
			"type": "shell",
			"command": "mkdir -p Debug && cd Debug && cmake.exe -G \"NMake Makefiles\" -DCMAKE_LINKER=$(cygpath -m $(which link)) -DCMAKE_BUILD_TYPE=Debug .. && nmake",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build for Release",
			"type": "shell",
			"command": "mkdir -p Release && cd Release && cmake.exe -G \"NMake Makefiles\" -DCMAKE_LINKER=$(cygpath -m $(which link)) -DCMAKE_BUILD_TYPE=Release .. && nmake",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "run",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
